{
	"name": "k2d/project-skeleton",
	"description": "Project template",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"repositories": [
		{ "type": "git", "url": "git@github.com:K2D-CZ/core.git" },
		{ "type": "git", "url": "git@github.com:K2D-CZ/box.git" },
		{ "type": "git", "url": "git@github.com:K2D-CZ/file.git" },
		{ "type": "git", "url": "git@github.com:K2D-CZ/gallery.git" }
	],
	"require": {
		"php": ">= 7.4",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-simplexml": "*",
		"ext-xmlwriter": "*",
		"nette/nette": "^3.0.0",
		"orisai/nette-di": "^1.0.0",
		"simple-cms/box-module": "master-dev",
		"simple-cms/core-module": "master-dev",
		"simple-cms/file-module": "master-dev",
		"simple-cms/gallery-module": "master-dev",
		"symfony/dotenv": "^5.1",
		"tracy/tracy": "^2.7.6"
	},
	"require-dev": {
		"orisai/coding-standard": "^1.0.0",
		"phpstan/extension-installer": "^1.0.0",
		"phpstan/phpstan": "^0.12.0",
		"phpstan/phpstan-deprecation-rules": "^0.12.0",
		"phpstan/phpstan-nette": "^0.12.9",
		"phpstan/phpstan-strict-rules": "^0.12.0",
		"staabm/annotate-pull-request-from-checkstyle": "^1.3.0"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app"
		}
	},
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"phpstan/extension-installer": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
